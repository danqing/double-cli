{
    "$id": "rootconfig.json",
    "$ref": "#/definitions/IBosonConfig",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "IBosonConfig": {
            "properties": {
                "backend": {
                    "description": "Backend to use. Default is geth.",
                    "type": "string"
                },
                "chain": {
                    "description": "Name of the chain. Default is ethereum.",
                    "type": "string"
                },
                "datadir": {
                    "description": "The directory to store accounts in.",
                    "type": "string"
                },
                "hosts": {
                    "description": "A non-empty array of host IP:port addresses, in that format.",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1,
                    "type": "array"
                }
            },
            "required": [
                "chain",
                "datadir",
                "hosts"
            ],
            "type": "object"
        }
    }
}

