{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "INodeConfig": {
      "description": "Detailed configuration of a node",
      "properties": {
        "host": {
          "description": "Host IP address",
          "type": "string"
        },
        "port": {
          "description": "Protocol port",
          "type": "number"
        },
        "rpcPort": {
          "description": "JSON-RPC server port",
          "type": "number"
        }
      },
      "type": "object",
      "required": [
        "host",
        "port"
      ]
    },
    "IEnvConfig": {
      "description": "Environment-specific configuration",
      "properties": {
        "backend": {
          "description": "Backend for a local network",
          "type": "string"
        },
        "chain": {
          "description": "Name of the chain",
          "type": "string",
          "default": "ethereum"
        },
        "datadir": {
          "description": "Data directory relative to the root of the project",
          "type": "string"
        },
        "gasPrice": {
          "description": "Gas price multiplier in Wei",
          "type": "number"
        },
        "host": {
          "description": "Host IP:port addresses, in that format",
          "$ref": "#/definitions/INodeConfig"
        },
        "local": {
          "description": "Whether the environment is for a local node",
          "type": "boolean"
        },
        "networkID": {
          "description": "Network ID",
          "type": "number"
        },
        "nodeName": {
          "description": "Name of the local node",
          "type": "string"
        },
        "production": {
          "description": "Whether the environment is for production",
          "type": "boolean"
        }
      },
      "type": "object",
      "required": [
        "datadir",
        "host"
      ]
    }
  },
  "description": "Project configuration",
  "properties": {
    "chain": {
      "description": "Project-level chain name",
      "type": "string"
    },
    "backend": {
      "description": "Project-level local network backend",
      "type": "string"
    },
    "envs": {
      "patternProperties": {
        "^[a-zA-Z0-9-_]*$": {
          "$ref": "#/definitions/IEnvConfig",
          "description": "Configuration for a specific environment"
        }
      }
    },
    "project": {
      "description": "Name of the project",
      "type": "string"
    }
  },
  "required": [
    "envs",
    "project"
  ],
  "type": "object",
  "additionalProperties": false
}
